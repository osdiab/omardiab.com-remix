{
  "name": "omardiab.com",
  "private": true,
  "description": "Omar Diab's personal website",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup cloudflare-pages",
    "build": "cross-env NODE_ENV=production remix build",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "cross-env NODE_ENV=development remix build && concurrently 'npm:dev:*'",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "prettier": "prettier \"**/*.{js,jsx,ts,tsx,md}\"",
    "format": "npm run prettier --write",
    "format:check": "npm run prettier --check",
    "eslint": "TIMING=1 eslint --ext \"js,ts,jsx,tsx\" --cache",
    "lint": "npm run eslint . --max-warnings=0",
    "lint:fix": "npm run eslint . --fix"

  },
  "dependencies": {
    "@remix-run/cloudflare-pages": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  }
}
